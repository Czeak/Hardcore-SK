		<graphicData>
			<texPath>Things/Building/TrainingFacility/MartialArtsTarget</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			  <shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
			  </shadowData>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<altitudeLayer>Waist</altitudeLayer>
		<rotatable>true</rotatable>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2750</WorkToMake>
			<Flammability>1.0</Flammability>
		</statBases>
    <Size>(1,1)</Size>
	<minifiedDef>MinifiedFurniture</minifiedDef>
	<stuffCategories>
	<li>Leathery</li>
	</stuffCategories>
		<costStuffCount>120</costStuffCount>
		<costList>
			<Sand>40</Sand>
			<Spare_Parts>5</Spare_Parts>
		</costList>
		<pathCost>120</pathCost>
		<designationCategory>Misc</designationCategory>
		<placeWorkers>
			<li>TrainingFacility.PlaceWorker_MartialArtsTarget</li>
		</placeWorkers>
    <researchPrerequisite>SecurityI</researchPrerequisite>
